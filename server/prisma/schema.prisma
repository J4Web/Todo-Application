generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_CONN_STR")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
  Todo     Todo[]
}

model Todo {
  id          String   @id @default(uuid())
  title       String
  description String?
  priority    String
  tags        String[]
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
}
